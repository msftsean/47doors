# Azure MCP Configuration - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit your .env file to source control!

# ============================================================
# AZURE AUTHENTICATION (Required)
# ============================================================
# TODO_1: Your Azure subscription ID (found in Azure Portal > Subscriptions)
AZURE_SUBSCRIPTION_ID=

# TODO_2: Your Azure tenant ID (found in Azure Portal > Microsoft Entra ID > Overview)
AZURE_TENANT_ID=

# TODO_3: Service principal client ID (create with: az ad sp create-for-rbac --name "mcp-server-sp")
AZURE_CLIENT_ID=

# TODO_4: Service principal client secret (from the output of the command above)
AZURE_CLIENT_SECRET=

# TODO_5: Your Azure resource group name
AZURE_RESOURCE_GROUP=

# ============================================================
# AZURE OPENAI (Required for AI features)
# ============================================================
# TODO_6: Your Azure OpenAI endpoint URL
# Example: https://your-resource-name.openai.azure.com/
AZURE_OPENAI_ENDPOINT=

# TODO_7: Your Azure OpenAI API key (found in Azure Portal > Your OpenAI Resource > Keys and Endpoint)
AZURE_OPENAI_API_KEY=

# TODO_8: Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================================
# AZURE AI SEARCH (Optional - for RAG patterns)
# ============================================================
# TODO_9: Your Azure AI Search endpoint
# Example: https://your-search-service.search.windows.net
AZURE_SEARCH_ENDPOINT=

# TODO_10: Your Azure AI Search API key (found in Search service > Keys)
AZURE_SEARCH_API_KEY=

# TODO_11: Your search index name
AZURE_SEARCH_INDEX_NAME=

# ============================================================
# AZURE STORAGE (Optional - for blob storage access)
# ============================================================
# TODO_12: Your Azure Storage account name
AZURE_STORAGE_ACCOUNT_NAME=

# TODO_13: Your Azure Storage account key (found in Storage account > Access keys)
AZURE_STORAGE_ACCOUNT_KEY=

# TODO_14: Your storage connection string (alternative to account name + key)
# You can use either the connection string OR the account name + key combination
AZURE_STORAGE_CONNECTION_STRING=

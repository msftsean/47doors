# 47 Doors Hackathon Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Azure OpenAI Configuration
# =============================================================================
# Get these from your Azure OpenAI resource in the Azure Portal
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# REQUIRED: Azure AI Search Configuration
# =============================================================================
# Get these from your Azure AI Search resource
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=university-kb

# =============================================================================
# OPTIONAL: Azure Cosmos DB (for session persistence)
# =============================================================================
# Leave blank to use in-memory session storage
COSMOS_ENDPOINT=
COSMOS_KEY=
COSMOS_DATABASE=47doors
COSMOS_CONTAINER=sessions

# =============================================================================
# OPTIONAL: Application Settings
# =============================================================================
# Set to 'development' for local testing, 'production' for deployment
ENVIRONMENT=development

# Backend API port (default: 8000)
API_PORT=8000

# Frontend dev server port (default: 5173)
FRONTEND_PORT=5173

# Enable mock mode when Azure services unavailable
USE_MOCK_MODE=true

# =============================================================================
# OPTIONAL: Logging & Monitoring
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Application Insights (for Azure deployment)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# =============================================================================
# MCP Server Configuration (Lab 07)
# =============================================================================
# Port for MCP server (default: 3000)
MCP_SERVER_PORT=3000

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real credentials to version control
# 2. USE_MOCK_MODE=true allows running without Azure services
# 3. For hackathon, coaches may provide shared Azure credentials
# 4. Run verify_environment.py to check your configuration
